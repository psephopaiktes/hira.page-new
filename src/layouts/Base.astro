---
import Footer from "@/components/Footer.astro";
import Nav from "@/components/Nav.astro";
import "@/styles/global.less";
import { ViewTransitions } from "astro:transitions";

const { title, description = "ブログ" } = Astro.props;
---

<html lang="ja">
  <head>
    <ViewTransitions />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Font preloads -->
    <link
      rel="preload"
      href="/font/Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/FuturaNowVar.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <!--
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:wght,FILL@500..700,1"
      rel="stylesheet"
    /> -->
  </head>

  <body class="l-body">
    <Nav />

    <main class="l-main">
      <h1>{title}</h1>
      <slot />
      <Footer />
    </main>

    <style lang="less">
      @import "@/styles/common.less";

      /* TODO: Fix */
      main {
        margin: 8px;
        padding: 32px;
        border-radius: 24px;
        background: rgb(@base);
        @media (width < @sm) {
          padding: 16px;
        }
      }
    </style>
  </body>
</html>
