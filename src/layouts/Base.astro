---
import Footer from "@/components/Footer.astro";
import Nav from "@/components/Nav.astro";
import "@/styles/global.less";
import { ViewTransitions } from "astro:transitions";

const {
  title = "WEBA",
  description = "デザイナー「平田 章」のブログ兼ポートフォリオサイトです。Webフロント技術やUIデザインについてなどの情報を発信しています。",
} = Astro.props;
---

<html lang="ja">
  <head>
    <ViewTransitions />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <!-- TODO 動的に変える ブログ詳細とか ｜WEBA に -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" sizes="64x64" type="image/png" href="img/favicon.svg" />
    <link rel="icon" sizes="192x192" href="img/android-chrome.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="img/apple-touch-icon.png"
    />
    <meta name="theme-color" content="#FFCC66" />
    <meta name="color-scheme" content="light dark" />

    <!-- Font preloads -->
    <link
      rel="preload"
      href="/font/Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/FuturaNowVar.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <body class="l-body">
    <Nav />

    <main class="l-main">
      <h1>{title}</h1>
      <slot />
      <Footer />
    </main>

    <style lang="less">
      @import "@/styles/common.less";

      /* TODO: Fix */
      main {
        margin: 8px;
        padding: 32px;
        border-radius: 24px;
        background: rgb(@base);
        @media (width < @sm) {
          padding: 16px;
        }
      }
    </style>
  </body>
</html>
