---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Nav from "@/components/Nav.astro";

const { title, description } = Astro.props;
---

<html lang="ja">
  <head>
    <ViewTransitions />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Font preloads -->
    <link
      rel="preload"
      href="/font/Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/font/FuturaNowVar.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>

  <body>
    <Nav />

    <main>
      <h1>{title}</h1>
      <slot />
    </main>

    <footer>
      Â© {new Date().getFullYear()} Akira HIRATA.
    </footer>
  </body>
</html>
