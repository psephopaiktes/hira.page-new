---
import BaseMeta from "@/components/BaseMeta.astro";
import CommonBody from "@/layouts/CommonBody.astro";

const { title, description } = Astro.props;
---

<html lang="ja">
  <head prefix="og: https://ogp.me/ns#">
    <BaseMeta title={title} description={description} />

    <!-- TODO: OG -->

    <style lang="less" is:global>
      @import "@/styles/common.less";

      .content {
        > * {
          margin: 1em 0 0;
        }
        h2:target,
        h3:target {
          animation: highlight 2s;
        }
        @keyframes highlight {
          0% {
            background-color: rgba(@theme, 0.6);
          }
          100% {
            background-color: none;
          }
        }
        h2 {
          margin: 3em 0 0;
          line-height: 1.1;
          font-size: 1.9em;
          color: rgb(@label);

          &::first-letter {
            font-size: 1.3em;
          }
          &::after {
            content: ".";
            color: rgb(@theme);
            font-size: 1.6em;
          }
        }
        h3 {
          margin: 2em 0 0;
          line-height: 1.4;
          font-size: 1.5em;
          border-bottom: 1px solid rgba(@main, 0.1);
        }
        h4 {
          margin: 2em 0 -0.4em;
          line-height: 1.4;
          font-size: 1.1em;
        }
        p:after {
          content: "";
          clear: both;
          display: block;
        }
        ul {
          list-style: disc;
          padding-left: 1.5em;
        }
        ol {
          list-style: decimal;
          padding-left: 1.5em;
        }
        li {
          margin: 0 0 0.5em;
          line-height: 1.4;
          ul,
          ol {
            margin: 0.5em 0 0;
          }
          ul {
            list-style: circle;
          }
          ol {
            list-style: decimal;
          }
        }
        dl {
          dt {
            font-weight: 700;
            font-size: 1.1em;
            margin-top: 1em;
            &::after {
              content: " :";
              opacity: 0.4;
            }
          }
        }
        table {
          width: 100%;
          th,
          td {
            border: 1px solid rgba(@main, 0.2);
            padding: 0.4em 0.8em;
          }
          th {
            background: rgba(@main, 0.2);
          }
          tr:nth-child(even) td {
            background: rgba(@main, 0.02);
          }
        }
        b {
          font-weight: 700;
        }
        strong {
          background: linear-gradient(transparent 60%, rgba(@theme, 0.8) 40%);
        }
        :not(pre) code {
          font-family: Consolas, "Courier New", Courier, Monaco, monospace;
          color: rgba(@label, 0.9);
          background-color: rgba(@main, 0.08);
          padding: 0.2em 0.4em;
          margin: auto 0.2em;
          border-radius: 2px;
          font-size: 0.9em;
          vertical-align: 0.2em;
        }
        blockquote {
          font-style: italic;
          color: rgba(@main, 0.8);
          background: rgba(@main, 0.05);
          padding: 0.6em 1em;
          border-left: 2px solid rgba(@main, 0.1);
        }
        small {
          font-size: 0.9em;
          opacity: 0.8;
          &.reference {
            width: 100%;
            text-align: right;
            display: block;
            margin-top: 0.4em;
            margin-bottom: -1em;
            a {
              color: rgba(@main, 0.4);
              text-decoration: underline;
            }
          }
        }
        hr {
          border: 0;
          margin: 8em 0 6em;
          border-top: 1px dashed rgba(@main, 0.5);
        }
        a {
          text-decoration: underline;
          color: rgb(@label);
          font-weight: 500;
          &:visited {
            filter: brightness(80%);
          }
        }
        img {
          border-radius: 4px;
        }
        video {
          max-width: 100%;
        }
        pre {
          padding: 1em;
          border-radius: 4px;
          border: 2px solid rgba(@main, 0.2);
          code {
            counter-reset: step;
            counter-increment: step 0;
            .line::before {
              content: counter(step);
              counter-increment: step;
              width: 1em;
              margin-right: 1em;
              display: inline-block;
              text-align: right;
              color: #ffffff33;
            }
          }
        }
        .footnotes {
          margin-top: 8em;
          padding-top: 2em;
          border-top: 1px solid rgba(@main, 0.2);
          h2 {
            display: none;
          }
          a {
            &::before {
              content: " [";
            }
            &::after {
              content: "]";
            }
            text-decoration: none;
            opacity: 0.8;
          }
        }
      }
    </style>
  </head>

  <CommonBody>
    <slot />
  </CommonBody>


</html>
