---
import { Image } from "astro:assets";
const { posts } = Astro.props;
---

<ul>
  {
    posts.map((post) => (
      <li>
        <a
          href={post.data.redirect || `/blog/${post.slug}/`}
          target={post.data.redirect ? "_blank" : null}
        >
          <Image
            src={post.data.cover}
            alt={post.data.title}
            transition:name={post.slug}
          />
          <h4>{post.data.title}</h4>
        </a>
      </li>
    ))
  }
</ul>

