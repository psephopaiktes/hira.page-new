---
import Footer from "@/components/ui/Footer.astro";
import Nav from "@/components/ui/Nav.astro";
import "@/styles/global.less";
---

<body class="l-body">
  <Nav />

  <main class="l-main">
    <slot />
    <Footer />
  </main>

  <style lang="less">
    @import "@/styles/common.less";

    main {
      margin: 8px;
      overflow: hidden;
      border-radius: 24px;
      border: 1px solid rgba(@label, 0.1);
      background: rgb(@base);
      box-shadow: 2px 8px 48px rgba(@label, 0.3);
      @media (width < @xs) {
        margin-bottom: 0;
        border-radius: 0;
      }
    }
  </style>
</body>
