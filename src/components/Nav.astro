---
const currentPath = Astro.url.pathname.split("/")[1];
const pageList = ["blog", "works", "me", "price", "contact"];

import Logo from "@/assets/logo.svg";
---

<nav class="l-nav">
  <h1 class="logo">
    <a href="/">
      <img src={Logo.src} width={Logo.width} height={Logo.height} alt="WEBA" />
    </a>
  </h1>

  <ul class="menu">
    {
      pageList.map((path) => (
        <li>
          {path == currentPath ? (
            <div class="navIndicator" transition:name="navIndicator" />
          ) : (
            ""
          )}

          <a
            class={path == currentPath ? "active" : ""}
            href={"/" + path}
            data-lottie-container
          >
            <dotlottie-player
            // TODO: ここのifは完全一致に。Blog詳細でもいちいちアニメーション再生されるので。
              autoplay={path == currentPath ? "autoplay" : null}
              loop="false"
              src={`/lottie/${path}.lottie`}
            />
            {path.toUpperCase()}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

