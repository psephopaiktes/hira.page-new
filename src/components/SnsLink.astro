---
import Icon from "@/components/Icon.astro";

const { sns, link = `https://${sns}.com/psephopaiktes` } = Astro.props;
---

<a href={link} target="_blank" title={sns} aria-label={sns}>
  <Icon path={`sns/${sns}`} />
</a>

<style lang="less">
  @import "@/styles/common.less";

  a {
    display: block;
    position: relative;
    width: 32px;
    height: 32px;
    word-break: keep-all;
    opacity: 0.8;

    &::before,
    &::after {
      position: absolute;
      display: block;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      transition: bottom 0.2s ease-out;
      pointer-events: none;
    }
    &::before {
      content: "";
      border-width: 20px 10px;
      border-style: solid;
      border-color: rgb(@label) transparent transparent;
      bottom: 30%;
    }
    &::after {
      content: attr(title);
      margin-left: auto;
      margin-right: auto;
      bottom: 100%;
      padding: 0.2em 0.6em 0.3em;
      border-radius: 8px;
      text-align: center;
      font-size: 14px;
      background: rgb(@label);
      color: rgb(@base);
    }
    &:hover,
    &:active {
      opacity: 1;
      // transform: scale(1.07);
      &::before {
        opacity: 1;
        bottom: 40%;
      }
      &::after {
        opacity: 1;
        bottom: 120%;
      }
    }
  }

  span {
    position: absolute;
    left: 200%;
  }

  :global(svg),
  :global(path) {
    width: 100%;
    height: 100%;
    fill: currentColor !important;
  }
</style>
