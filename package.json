    "less": "^4.2.0"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "svg-sprite": "^1.5.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-astro"
    ]
  }
